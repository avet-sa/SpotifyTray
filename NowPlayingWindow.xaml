<Window
    x:Class="SpotifyTray.NowPlayingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="340"
    Height="150"
    WindowStyle="None"
    ResizeMode="NoResize"
    Topmost="True"
    Background="Transparent"
    AllowsTransparency="True"
    ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="MediaButton"
                TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="#ffffff"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Arrow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="bg"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                    Value="True">
                                <Setter TargetName="bg"
                                        Property="Background"
                                        Value="#3a3a3a"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                    Value="True">
                                <Setter TargetName="bg"
                                        Property="Background"
                                        Value="#4a4a4a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="BackgroundBorder"
            Background="#202020"
            CornerRadius="10"
            BorderBrush="#3a3a3a"
            BorderThickness="1"
            Padding="16">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                    Opacity="0.6"
                    BlurRadius="20"
                    ShadowDepth="4"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Width="110"
                    Height="110"
                    CornerRadius="8"
                    Background="#2a2a2a"
            >
                <Grid>
                    <!-- Blurred copy of cover underneath for glow effect -->
                    <Image x:Name="CoverBlurred"
                           Stretch="UniformToFill"
                           Opacity="0.5"
                           Margin="-3">
                        <Image.Effect>
                            <BlurEffect Radius="20"/>
                        </Image.Effect>
                    </Image>
                    <!-- The actual sharp cover image on top -->
                    <Image x:Name="Cover"
                            Stretch="UniformToFill"/>
                </Grid>
            </Border>

            <StackPanel Grid.Column="1"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center">
                <TextBlock x:Name="TitleText"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="15"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="180"/>
                <TextBlock x:Name="ArtistText"
                           Foreground="#b3b3b3"
                           FontSize="13"
                           Margin="0,6,0,0"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="180"/>
                <TextBlock x:Name="AlbumText"
                           Foreground="#808080"
                           FontSize="11"
                           Margin="0,4,0,0"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="180"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Center">
                    <Button Click="Prev"
                            Width="36"
                            Height="36"
                            Margin="4,0"
                            Style="{StaticResource MediaButton}">
                        <Viewbox Width="26"
                                Height="26">
                            <Canvas Width="24"
                                    Height="24">
                                <Rectangle Canvas.Left="6"
                                        Canvas.Top="6"
                                        Width="2"
                                        Height="12"
                                        Fill="White"/>
                                <Path Data="M10,12 L18,6 L18,18 Z"
                                        Fill="White"/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                    <Button x:Name="PlayPauseButton"
                            Click="PlayPause"
                            Width="40"
                            Height="40"
                            Margin="4,0"
                            Style="{StaticResource MediaButton}">
                        <Viewbox Width="28"
                                Height="28">
                            <Canvas Width="24"
                                    Height="24">
                                <Path x:Name="PlayPauseIcon"
                                      Data="M8,5 L19,12 L8,19 Z"
                                      Fill="White"/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                    <Button Click="Next"
                            Width="36"
                            Height="36"
                            Margin="4,0"
                            Style="{StaticResource MediaButton}">
                        <Viewbox Width="26"
                                Height="26">
                            <Canvas Width="24"
                                    Height="24">
                                <Path Data="M6,6 L6,18 L14,12 Z"
                                        Fill="White"/>
                                <Rectangle Canvas.Left="16"
                                        Canvas.Top="6"
                                        Width="2"
                                        Height="12"
                                        Fill="White"/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>